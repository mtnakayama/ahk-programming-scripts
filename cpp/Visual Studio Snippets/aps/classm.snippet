<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>class (Custom)</Title>
            <Shortcut>classm</Shortcut>
            <Description>Class with private and public sections.</Description>
            <Author>Matthew Nakayama</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
                <SnippetType>SurroundsWith</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>name</ID>
                    <ToolTip>Class name</ToolTip>
                    <Default>MyClass</Default>
                </Literal>
            </Declarations>
            <Code Language="CPP"><![CDATA[class $name$ {
                private:
                    $selected$$end$
                public:
                    $name$();
                };]]>
            </Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>
